@model MassCall.ViewModels.MonthPayViewModel


<div class="modal-header">
    <h1 class="modal-title">এই মাসে কে কত দিছ ? </h1>
</div>
<div>
    <form id="MonthlyEntryForm" style="overflow: auto; margin-left: 5px;">
        <div class="form-group">
            <label for="exampleFormControlSelect1">Member</label>
            <select class="form-control" name="Memberid" id="exampleFormControlSelect1">
                <option value=''>--Select member--</option>
                @foreach (var member in Model.Allmembers)
                {
                    <option value="@member.id">@member.Name</option>
                }

            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect2">Paid</label>
            <input value="" name="Paid" />
        </div>
        <div class="form-group">
            <button type="button" id="Savebtn" class="btn btn-success">Save</button>
            <button id="cancelBtn" type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>


<script>
    $("#Savebtn").click(function () {

            $.ajax({
                type: 'post',
                url: '@Url.Action("MonthlyEntry", "MonthlyEntry")',
                data: $("#MonthlyEntryForm").serialize(),
            })
                .done(function (response) {
                    alert("Save")

                    window.location.href = "../Home/Index";

                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });

    })
</script>

