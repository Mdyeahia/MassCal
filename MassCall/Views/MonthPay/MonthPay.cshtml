@model MassCall.ViewModels.MonthPayViewModel
@{
    ViewBag.Title = "MonthPay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="MonthPayForm">
    <div class="form-group">
        <label for="exampleFormControlSelect1">Member</label>
        <select class="form-control" name="Memberid" id="exampleFormControlSelect1">
            <option value=''>--Select member--</option>
            @foreach (var member in Model.Allmembers)
            {
                <option value="@member.id">@member.Name</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select class="form-control" name="Month" id="exampleFormControlSelect1">
            <option value=''>--Select Month--</option>
            <option value='1'>Janaury</option>
            <option value='2'>February</option>
            <option value='3'>March</option>
            <option value='4'>April</option>
            <option value='5'>May</option>
            <option value='6'>June</option>
            <option value='7'>July</option>
            <option value='8'>August</option>
            <option value='9'>September</option>
            <option value='10'>October</option>
            <option value='11'>November</option>
            <option value='12'>December</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect2">Have To Pay</label>
        <input value=""name="MonthCost" />
    </div>
    <div class="form-group">
        <button type="button" id="Savebtn" class="btn btn-success">Success</button>
        <button type="reset" class="btn btn-warning">Cancel</button>
    </div>
</form>

<script>
    $("#Savebtn").click(function () {
       
            $.ajax({
                type: 'post',
                url: '@Url.Action("MonthPay", "MonthPay")',
                data: $("#MonthPayForm").serialize(),
            })
                .done(function (response) {
                    alert("Save")
                    window.location.href = "../Home/Index";
                    
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
        
    })
</script>